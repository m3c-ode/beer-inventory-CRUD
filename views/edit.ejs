<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Beer</title>
</head>

<body>
    <h1>Edit <%= beer.name %> beer details</h1>
    <form action="/beers/<%= beer.id %>?_method=PATCH" method="post">
        <section>
            <label for="name">Enter beer name: </label>
            <input type="text" name="name" id="name" placeholder="Beer Name" value="<%= beer.name %>">
        </section>
        <section>
            <label for="style">Choose beer style: </label>
            <select name="style" id="style">
                <% for (const style of styles) { %>
                <option value="<%= style %>" <%= beer.style === style? 'selected' : '' %>><%= style %></option>
                <% } %>
            </select>
        </section>
        <section>
            <label for="price">Enter beer price: $</label>
            <input type="number" name="price" id="price" placeholder="5.99" min="0" step="0.01"
                value="<%= beer.price %>">
        </section>
        <section>
            <label for="qty">Enter stock quantity: </label>
            <input type="number" name="qty" id="qty" placeholder="25" min="0" value="<%= beer.qty %>">
        </section>
        <section>
            <label for="description">Write your description</label>
            <br>
            <textarea name="description" id="description" cols="30" rows="5" value="<%= beer.description %>"></textarea>
        </section>

        <button type="submit">Edit beer information</button>

    </form>
    <a href="/">Back to beer list</a>
</body>

</html>