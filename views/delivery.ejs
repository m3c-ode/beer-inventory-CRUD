<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delivery</title>
</head>

<body>
    <script src="" type="text/javascript">
        // function addBeer(params) {

        // }
    </script>
    <h1>Deliver some beers</h1>
    <form action="/?_method=PATCH" method="post">
        <% for (const beer of beers) { %>
        <section>
            <h3><%= beer.name %></h3>
            <section>
                <p>Quantity in stock: <span><%= beer.qty %></span></p>
                <label for="shipqty">Amount to ship: </label>
                <input type="number" name="shipqty" id="shipqty" min="0" max="<%= beer.qty %>">
            </section>
        </section>
        <% } %>
        <button>Ship</button>
    </form>
</body>

</html>